<div class="card card-body">
  <h3>Add Subject</h3>
  <form action="/teachers" method="post">
    <div class="form-group">
      <label for="tname">Tname</label>
      <input type="text" class="form-control" name="tname" required>
    </div>
    <div class="form-group">
      <label for="tcode">Tcode</label>
      <input type="text" class="form-control" name="tcode" required>
    </div>
    <div class="form-group">
      <label for="scode">Scode</label>
      <input type="text" class="form-control" name="scode" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>