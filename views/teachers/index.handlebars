{{#each teachers}}
  <div class="card card-body mb-2">
    <h4>{{tname}}</h4>
    <p>{{tcode}}</p>
    <p>{{scode}}</p>
    <a class="btn btn-dark btn-block" href="/teachers/edit/{{id}}">Edit</a>
    <form method="post" action="/teachers/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>

  </div>

{{else}}
  <p>No teachers listed</p>
{{/each}}