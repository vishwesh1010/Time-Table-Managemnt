{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
  <h3>Edit Time-Table </h3>
  <form action="/classes/{{classes.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="class">Class</label>
      <input type="text" class="form-control" name="class" value="{{classes.class}}" required>
    </div>
    <div class="form-group">
      <label for="year">Year</label>
      <input type="text" class="form-control" name="year" value="{{classes.year}}" required>
    </div>
    <div class="form-group">
      <label for="branch">Branch</label>
      <input type="text" class="form-control" name="branch" value="{{classes.branch}}" required>
    </div>
    <div class="form-group">
      <label for="batch">Batch</label>
      <input type="text" class="form-control" name="batch" value="{{classes.batch}}" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>